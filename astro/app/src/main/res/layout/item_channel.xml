<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/fibonacci_5"
    android:foreground="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvChannelNumber"
        android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvChannelName"
        android:maxLines="1"
        android:lines="1"
        android:layout_marginLeft="@dimen/fibonacci_5"
        android:layout_marginRight="@dimen/fibonacci_5"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tvChannelNumber"
        android:layout_toLeftOf="@+id/ivFavourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/ivFavourite"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/heart"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>